.reviews
    height 882px
    background url('../img/general/reviews-bg.jpg') 0 0 no-repeat
    background-size cover
    
    &:before 
            content ''
            display block
            position absolute
            top -19px
            left 0
            right 0
            height 21px
            background url('../img/general/wave-top-reviews.png') 0 0 no-repeat
            background-size cover
            z-index 1

    &:after 
            content ''
            display block
            position absolute
            bottom 0px
            left 0
            right 0
            height 19px
            background url('../img/general/wave-bottom-reviews.png') 0 0 no-repeat
            background-size cover
            z-index 1

.reviews-slider
    position relative
    padding 0 110px
    
    .slick-dots
        z-index 10

        li
            button
                border-radius 50%
                border 1px solid white
               

                &:before
                    display none

            &.slick-active
                button
                    background-color white

.reviews-slider__controlls
    position absolute
    top 50%
    margin-top -22px
    width 44px
    height 44px
    cursor pointer

.reviews-slider__prev
    background url('../img/svg/(Lucy G)left-arrow.svg') 0 0 no-repeat
    background-size 100%
    left -10px

.reviews-slider__next
    background url('../img/svg/(Lucy G)right-arrow.svg') 0 0 no-repeat
    background-size 100%
    right -10px
 
.review-slider__item
    margin 0 5px

.review-item
    display flex
    justify-content space-between
    width 100%
    max-width 460px
    height 315px
    padding 10px 20px 40px
    margin-bottom 30px
    border-radius 10px
    background #fff url('../img/general/review-bg.jpg') right bottom no-repeat 
    color mainColor

.review-author
    flex 1 auto
    margin-right 15px
    text-align center

.review-text
    flex 2 auto
    font-size 15px
    line-height 1.2
    
    p
        margin-bottom 15px

.review-photo
    width 140px
    height 140px
    margin 0 auto 20px
    border-radius 50%
    overflow hidden

.review-author__name
    display block
    margin-bottom 8px
    font-size 24px
    font-family boldFont

.review-date
    display block
    margin-top 15px


.review-photo--1
    background url('../img/content/reviews/review1.jpg') -140px 0px no-repeat

.review-photo--2
    background url('../img/content/reviews/review2.jpg') -46px 0px no-repeat

.review-photo--3
    background url('../img/content/reviews/review3.jpg') -95px 0px no-repeat


.review-photo--4
    background url('../img/content/reviews/review4.jpg') -123px -42px no-repeat


    
