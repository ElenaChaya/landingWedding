.banner
    background url('../img/content/banner.jpg') center no-repeat
    background-size cover
    padding 70px 

    &:after 
        content ''
        display block
        position absolute
        bottom 0
        left 0
        right 0
        height 20px
        background url('../img/general/wave.png') 0 0 no-repeat
        background-size cover

    .container
        display flex
        justify-content center
        align-items flex-end
        height 550px
        
        

.banner-text
    text-align center
    font-size 36px
    font-family titleFont
    line-height 1.2
    color #fff
