.services
    background url('../img/general/services-bg.jpg') 0 0 no-repeat
    background-size cover 
    color #fff

    &:before 
            content ''
            display block
            position absolute
            top 0
            left 0
            right 0
            height 20px
            background url('../img/general/wave-top-white.png') 0 0 no-repeat
            background-size cover
            
    .container
            display flex
            flex-wrap wrap
            justify-content center
            
    .g-section-title
        width 100%

.service-item
    position relative
    flex-basis auto
    width 40%
    min-height 165px
    margin 0 15px 40px
    padding-left 175px

    &.service-item__center
        width 30%

    &:before
        content ''
        position absolute
        left 0
        display block
        width 165px
        height 165px

.service-item__title
    display block
    font-size 24px
    font-family boldFont
    margin-bottom 10px

.service-item__text
    line-height 1.2

.service-item--organization
    
    &:before
        background url('../img/content/services/organization.png') 0 0 no-repeat
        background-size 100%

