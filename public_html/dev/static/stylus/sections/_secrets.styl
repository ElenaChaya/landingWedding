.secrets
    background url('../img/general/secrets-bg.jpg') 0 0 no-repeat
    background-size cover 
    color #fff

    &:before 
            content ''
            display block
            position absolute
            top 0
            left 0
            right 0
            height 20px
            background url('../img/general/wave-top-white.png') 0 0 no-repeat
            background-size cover

.secrets-content
    width 100%
    max-width 960px
    margin 0 auto
    display flex
    flex-wrap wrap
    justify-content space-between
    align-items center
    
    .g-section-title
        width 100%
        margin-bottom 70px
        color #fff

.secrets-text
    max-width 450px
    
    p 
        font-size: 28px;
        line-height: 1.2;
        margin-bottom: 20px



    
            
